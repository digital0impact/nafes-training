// نسخة من schema.prisma لدعم PostgreSQL (Supabase)
// لاستخدامها: انسخي محتوى هذا الملف إلى schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// نموذج المستخدم (المعلم)
model User {
  id              String    @id @default(cuid())
  email           String    @unique
  name            String
  password        String
  role            String    @default("teacher") // teacher, admin
  subscriptionPlan String   @default("free") // free, premium
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  // العلاقات
  testModels      TestModel[]
  activities      Activity[]
  sessions        Session[]
  
  @@map("users")
}

// نموذج جلسة المصادقة
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("sessions")
}

// نموذج حساب المصادقة
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// نموذج طلب التحقق
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// نموذج الاختبار
model TestModel {
  id              String   @id @default(cuid())
  title           String
  description     String   @default("")
  period          String
  weeks           String   // JSON array as string
  relatedOutcomes String   // JSON array as string
  questionIds     String   // JSON array as string
  duration        Int      // بالدقائق
  skill           String
  testType        String   @default("normal") // "normal" | "diagnostic"
  userId          String   // المعلم الذي أنشأ النموذج
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // العلاقات
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("test_models")
}

// نموذج النشاط
model Activity {
  id            String   @id @default(cuid())
  title         String
  description   String   @default("")
  duration      String
  skill         String
  targetLevel   String?  // "متقدمة" | "متوسطة" | "تحتاج دعم"
  outcomeLesson String?
  type          String?  // "quiz" | "drag-drop" | "ordering" | "fill-blank"
  content       String   // JSON string for ActivityContent
  image         String?
  userId        String   // المعلم الذي أنشأ النشاط
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // العلاقات
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("activities")
}

// نموذج الطالبة
model Student {
  id            String    @id @default(cuid())
  studentId     String    @unique // رقم الطالبة (مثل STU-301)
  name          String
  grade         String    // الصف (مثل 3/1)
  classCode     String    // رمز الفصل (مثل SCI3A)
  password      String    // كلمة مرور للطالبة
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@map("students")
}















