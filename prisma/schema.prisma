// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// أدوار المستخدم: teacher, admin, visitor_reviewer
// نموذج المستخدم (المعلم / الزائر / المدير)
// ملاحظة: كلمة المرور تُدار بواسطة Supabase Auth
model User {
  id              String    @id @default(uuid()) // استخدام UUID من Supabase
  email           String    @unique
  name            String
  role            String    @default("teacher") // teacher, admin, visitor_reviewer
  subscriptionPlan String   @default("free") // free, premium
  isDisabled      Boolean   @default(false) // تعطيل حساب الزائر فوراً
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  // العلاقات
  testModels       TestModel[]
  activities       Activity[]
  classes          Class[]
  gameShares       GameShare[]
  testShares       TestShare[]
  visitorProfiles  VisitorProfile[]  @relation("VisitorProfileAsVisitor")
  visitorComments  VisitorComment[]
  auditLogs        AuditLog[]
  teacherVisitors  VisitorProfile[]   @relation("VisitorProfileAsTeacher")
  
  @@map("users")
}

// صلاحية الزائر (ما يمكنه مشاهدته) - يحددها المعلم
model VisitorProfile {
  id          String   @id @default(cuid())
  teacherId   String   // المعلم الذي منح الصلاحية
  visitorId   String   // المستخدم بدور visitor_reviewer
  scope       String   // JSON: ["nafes_plan","activities","results","learning_indicators"]
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  teacher     User     @relation("VisitorProfileAsTeacher", fields: [teacherId], references: [id], onDelete: Cascade)
  visitor     User     @relation("VisitorProfileAsVisitor", fields: [visitorId], references: [id], onDelete: Cascade)

  @@unique([teacherId, visitorId])
  @@index([visitorId])
  @@index([teacherId])
  @@map("visitor_profiles")
}

// تعليق الزائر على عنصر (نشاط، اختبار، مؤشر نافس) - لا يمكن تعديله أو حذفه
model VisitorComment {
  id         String   @id @default(cuid())
  visitorId  String
  targetType String   // activity | test | indicator
  targetId   String   // معرف العنصر
  body       String   // نص التعليق
  createdAt  DateTime @default(now())

  visitor    User     @relation(fields: [visitorId], references: [id], onDelete: Cascade)

  @@index([visitorId])
  @@index([targetType, targetId])
  @@map("visitor_comments")
}

// سجل تدقيق أنشطة الزائر (دخول، تعليق)
model AuditLog {
  id        String   @id @default(cuid())
  userId    String   // الزائر أو المعلم حسب السياق
  action    String   // visitor_login | visitor_comment | visitor_disabled | ...
  details   String?  // JSON
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}

// ملاحظة: تم إزالة Session, Account, VerificationToken
// لأن Supabase Auth يدير المصادقة والجلسات

// نموذج الاختبار
model TestModel {
  id              String   @id @default(cuid())
  title           String
  description     String   @default("")
  period          String
  weeks           String   // JSON array as string
  relatedOutcomes String   // JSON array as string
  questionIds     String   // JSON array as string
  duration        Int      // بالدقائق
  skill           String
  testType        String   @default("normal") // "normal" | "diagnostic"
  userId          String   // المعلم الذي أنشأ النموذج
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // العلاقات
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("test_models")
}

// نموذج النشاط
model Activity {
  id            String   @id @default(cuid())
  title         String
  description   String   @default("")
  duration      String
  skill         String
  targetLevel   String?  // "متقدمة" | "متوسطة" | "تحتاج دعم"
  outcomeLesson String?
  type          String?  // "quiz" | "drag-drop" | "ordering" | "fill-blank"
  content       String   // JSON string for ActivityContent
  image         String?
  userId        String   // المعلم الذي أنشأ النشاط
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // العلاقات
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("activities")
}

// نموذج الفصل
model Class {
  id            String    @id @default(cuid())
  code          String    @unique // رمز الفصل (مثل SCI3A)
  name          String    // اسم الفصل (مثل علوم ثالث متوسط أ)
  grade         String    // الصف (مثل 3/1)
  userId        String    // المعلم الذي أنشأ الفصل
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // العلاقات
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  students      Student[]
  trainingAttempts TrainingAttempt[]
  gameAttempts  GameAttempt[]
  gameShares    GameShare[]
  
  @@map("classes")
}

// نموذج الطالبة
model Student {
  id            String    @id @default(cuid())
  studentId     String    @unique // رقم الطالبة (مثل STU-301)
  name          String
  grade         String    // الصف (مثل 3/1)
  classCode     String    // رمز الفصل (مثل SCI3A) - للتوافق مع الكود القديم
  classId       String?   // ربط بالفصل
  password      String    // كلمة مرور للطالبة
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // العلاقات
  class         Class?    @relation(fields: [classId], references: [id], onDelete: SetNull)
  trainingAttempts TrainingAttempt[]
  gameAttempts   GameAttempt[]
  mastery        StudentMastery[]
  
  @@map("students")
}

// نموذج محاولة التدريب
// يحفظ محاولات الطلاب في التدريب (MCQ)
model TrainingAttempt {
  id            String    @id @default(cuid())
  nickname      String    // اسم الطالب المستعار
  classCode     String    // كود الفصل
  classId       String?   // ربط بالفصل (اختياري)
  studentDbId   String?   // ربط بالطالبة (اختياري للتوافق)
  testModelId   String?   // معرف نموذج الاختبار (إن وجد)
  testModelTitle String?  // عنوان نموذج الاختبار
  answers       String    // JSON string: { questionId: answer }
  score         Int       // عدد الإجابات الصحيحة
  totalQuestions Int      // إجمالي عدد الأسئلة
  percentage    Float     // النسبة المئوية
  timeSpent     Int       // الوقت المستغرق بالثواني
  completedAt   DateTime  @default(now())
  
  // العلاقات
  class         Class?    @relation(fields: [classId], references: [id], onDelete: SetNull)
  student       Student?  @relation(fields: [studentDbId], references: [id], onDelete: SetNull)
  
  @@map("training_attempts")
  @@index([classCode])
  @@index([classId])
  @@index([studentDbId])
  @@index([completedAt])
}

// نموذج محاولة اللعبة التعليمية
// يحفظ محاولات الطلاب في الألعاب التعليمية
model GameAttempt {
  id            String    @id @default(cuid())
  nickname      String    // اسم الطالب المستعار
  classCode     String    // كود الفصل
  classId       String?   // ربط بالفصل (اختياري)
  studentDbId   String?   // ربط بالطالبة (اختياري للتوافق)
  gameId        String    // معرف اللعبة (game_id)
  gameTitle     String    // عنوان اللعبة
  gameType      String    // نوع اللعبة (ordering, multiple_choice, etc.)
  chapter       String    // الفصل الدراسي
  answers       String    // JSON string: الإجابات
  score         Int       // النقاط المحققة
  totalScore    Int       // إجمالي النقاط الممكنة
  percentage    Float     // النسبة المئوية
  timeSpent     Int       // الوقت المستغرق بالثواني
  completedAt   DateTime  @default(now())
  
  // العلاقات
  class         Class?    @relation(fields: [classId], references: [id], onDelete: SetNull)
  student       Student?  @relation(fields: [studentDbId], references: [id], onDelete: SetNull)
  
  @@map("game_attempts")
  @@index([classCode])
  @@index([classId])
  @@index([studentDbId])
  @@index([gameId])
  @@index([completedAt])
  @@index([nickname])
}

// تتبع إتقان المهارات/المؤشرات للطالبة
model StudentMastery {
  id           String   @id @default(cuid())
  studentDbId  String
  key          String   // مثال: "game:game_002" أو "testModel:abc" أو "skill:xyz"
  status       String   // "mastered" | "not_mastered"
  score        Float?   // آخر نسبة/تقييم
  sourceType   String?  // "game" | "training" | ...
  sourceId     String?  // gameId أو testModelId
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())

  student      Student  @relation(fields: [studentDbId], references: [id], onDelete: Cascade)

  @@map("student_mastery")
  @@unique([studentDbId, key])
  @@index([studentDbId])
  @@index([key])
}

// نموذج مشاركة اللعبة التعليمية
// يحفظ معلومات مشاركة الألعاب مع الطلاب
model GameShare {
  id            String    @id @default(cuid())
  gameId        String    // معرف اللعبة (game_id)
  userId        String    // المعلم الذي شارك اللعبة
  shareToAll    Boolean   @default(false) // مشاركة لجميع الطلاب
  studentIds    String    // JSON array: قائمة معرفات الطلاب المحددين
  classId       String?   // ربط بالفصل (اختياري)
  sharedAt      DateTime  @default(now())
  
  // العلاقات
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  class         Class?    @relation(fields: [classId], references: [id], onDelete: SetNull)
  
  @@map("game_shares")
  @@index([gameId])
  @@index([userId])
  @@index([classId])
  @@index([sharedAt])
}

// مشاركة نموذج اختبار مع الطالبات
model TestShare {
  id            String   @id @default(cuid())
  modelId       String   // معرف النموذج (من DB أو النماذج الجاهزة)
  userId        String   // المعلم الذي شارك الاختبار
  shareToAll    Boolean  @default(false)
  studentIds    String   // JSON array: قائمة id الطالبات (من جدول students)
  sharedAt      DateTime @default(now())

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, modelId])
  @@map("test_shares")
  @@index([userId])
  @@index([modelId])
}
